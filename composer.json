{
    "name": "navarr/periodically-advancing-clock",
    "description": "An implementation of PSR-20 that advances with each call",
    "license": [
        "MIT"
    ],
    "authors": [
        {
            "name": "Navarr Barnier",
            "email": "me@navarr.me"
        }
    ],
    "require": {
        "php": "~8.0.0",
        "psr/clock": "@dev"
    },
    "provide": {
        "psr/clock-implementation": "1.0-dev"
    },
    "autoload": {
        "psr-4": {
            "Navarr\\PeriodicAdvancement\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Navarr\\PeriodicAdvancement\\Test\\": "tests/"
        }
    },
    "repositories": {
        "dev": {
            "type": "github",
            "url": "https://github.com/php-fig/clock"
        }
    },
    "archive": {
        "exclude": [
            ".composer/",
            ".github/",
            ".idea/",
            "tests/",
            ".env",
            ".gitignore",
            ".phpunit.result.cache",
            "composer.lock",
            "infection.json.dist",
            "phpcs.xml.dist",
            "phpstan.neon",
            "phpunit.xml.dist"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1",
        "infection/infection": "^0.26.0",
        "squizlabs/php_codesniffer": "^3.6",
        "jetbrains/phpstorm-attributes": "^1.0",
        "roave/security-advisories": "dev-master"
    }
}
